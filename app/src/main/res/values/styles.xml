<resources>

    <!-- Pulsanti arrotondati, verde con testo bianco -->
    <style name="CustomButtonStyle">
        <!-- Colore di sfondo del pulsante -->
        <item name="android:backgroundTint">#1B33A4</item>

        <!-- Colore del testo del pulsante -->
        <item name="android:textColor">@color/buttonTextColor</item>

        <!-- Dimensione del testo -->
        <item name="android:textSize">18sp</item>

        <!-- Padding interno per rendere i pulsanti piÃ¹ grandi -->
        <item name="android:padding">16dp</item>

        <!-- Bordi arrotondati -->
        <item name="android:radius">16dp</item>

        <!-- Larghezza e altezza dei pulsanti -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
